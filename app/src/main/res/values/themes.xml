<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITrash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ITrash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ITrash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ITrash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>